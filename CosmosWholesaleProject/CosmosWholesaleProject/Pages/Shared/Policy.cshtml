@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
  
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cosmo's Policies</title>
 
    <style>
        .rectangle {
            background-color: #003054;
            border-radius: 10px;
        }
    </style>

